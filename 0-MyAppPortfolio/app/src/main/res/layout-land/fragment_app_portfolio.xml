<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/portfolio_title"
            android:id="@+id/textView"
            app:layout_gravity="center_horizontal"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnSpan="3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_1"
            android:id="@+id/project_1_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject1"
            app:layout_row="1"
            app:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_3"
            android:id="@+id/project_3_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject2"
            app:layout_row="1"
            app:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_2"
            android:id="@+id/project_2_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject3"
            app:layout_row="1"
            app:layout_column="2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_4"
            android:id="@+id/project_4_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject4"
            app:layout_row="2"
            app:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_5"
            android:id="@+id/project_5_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject5"
            app:layout_row="2"
            app:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_6"
            android:id="@+id/project_6_button"
            app:layout_gravity="center_horizontal"
            app:layout_columnWeight="1"
            android:onClick="launchProject6"
            app:layout_row="2"
            app:layout_column="2" />


    </android.support.v7.widget.GridLayout>


</FrameLayout>